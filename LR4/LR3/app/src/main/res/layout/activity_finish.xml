<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F8AA"
    tools:context=".Finish">



    <TextView
        android:id="@+id/textView13"
        android:layout_width="345dp"
        android:layout_height="250dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="64dp"
        android:text="no"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#6CEA90"
        android:text="игрок зарегестрирован !"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="215dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="328dp"
        android:background="#676565"
        android:text="Информация о карьере игрока :"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="215dp"
        android:layout_height="87dp"
        android:layout_marginStart="20dp"
        android:textSize="19sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <Button
        android:id="@+id/button3"
        android:layout_width="338dp"
        android:layout_height="42dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#4695D5"
        android:onClick="toHomePage"
        android:text="в главную"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="343dp"
        android:layout_height="33dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:background="#676565"
        android:text="Информация об игроке :"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="124dp"
        android:layout_height="145dp"
        android:layout_gravity="center"
        android:layout_marginStart="3dp"
        android:layout_marginTop="12dp"
        android:maxHeight="200dp"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />



</androidx.constraintlayout.widget.ConstraintLayout>